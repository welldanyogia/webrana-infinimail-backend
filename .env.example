# Database Configuration
DATABASE_URL=postgres://infinimail:infinimail@localhost:5432/infinimail?sslmode=disable

# Server Ports
API_PORT=8080
SMTP_PORT=2525

# Features
AUTO_PROVISIONING_ENABLED=true

# Storage
ATTACHMENT_STORAGE_PATH=./attachments

# Logging
LOG_LEVEL=info

# Security Configuration (Development)
# API_KEY= (leave empty for development - API will be unsecured)
ALLOWED_ORIGINS=http://localhost:3000
APP_ENV=development

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_BURST=20

# SMTP Security
SMTP_ALLOW_INSECURE=true
SMTP_MAX_MESSAGE_SIZE=26214400
SMTP_MAX_RECIPIENTS=100
SMTP_READ_TIMEOUT=60s
SMTP_WRITE_TIMEOUT=60s

# -----------------------------------------------------------------------------
# Domain Manager / DNS Guide Configuration
# -----------------------------------------------------------------------------
# SMTP hostname shown in DNS setup guide (MX record target)
SMTP_HOSTNAME=mail.infinimail.local
# Server IP shown in DNS setup guide (A record value)
SERVER_IP=127.0.0.1

# -----------------------------------------------------------------------------
# ACME / Certificate Configuration (Let's Encrypt)
# -----------------------------------------------------------------------------
# ACME directory URL
# Staging: https://acme-staging-v02.api.letsencrypt.org/directory
# Production: https://acme-v02.api.letsencrypt.org/directory
ACME_DIRECTORY_URL=https://acme-staging-v02.api.letsencrypt.org/directory

# Email for ACME account (receives certificate expiry notifications)
ACME_EMAIL=admin@example.com

# Use staging server (true for development/testing, false for production)
ACME_STAGING=true

# Path to store SSL certificates
CERT_STORAGE_PATH=./certs

# Days before expiry to trigger auto-renewal (default: 30)
CERT_RENEWAL_DAYS=30

# Interval for checking certificate expiry (default: 24h)
# Format: Go duration string (e.g., 24h, 12h, 1h)
CERT_RENEWAL_CHECK_INTERVAL=24h
